# PAW API Server Configuration

# Server Configuration
API_HOST=0.0.0.0
API_PORT=5000
GIN_MODE=release

# Blockchain Configuration
CHAIN_ID=paw-1
NODE_URI=tcp://localhost:26657

# Security
JWT_SECRET=change-me-to-a-strong-random-secret-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_RPS=100

# Timeouts (in seconds)
READ_TIMEOUT=15
WRITE_TIMEOUT=15
SHUTDOWN_TIMEOUT=10

# Database (for future implementation)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=paw_api
# DB_USER=paw
# DB_PASSWORD=

# Redis (for caching, optional)
# REDIS_URL=redis://localhost:6379

# Monitoring (optional)
# METRICS_ENABLED=true
# METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
