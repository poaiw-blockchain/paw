# PAW Testnet Faucet Configuration

# Server Configuration
PORT=8080
ENVIRONMENT=development
CORS_ORIGINS=*

# Blockchain Configuration
NODE_RPC=http://localhost:26657
CHAIN_ID=paw-mvp-1
FAUCET_MNEMONIC=your-mnemonic-phrase-here
FAUCET_ADDRESS=paw1...
DENOM=upaw
AMOUNT_PER_REQUEST=100000000

# Database Configuration
DATABASE_URL=postgres://faucet:faucet_password@localhost:5432/faucet?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_IP=10
RATE_LIMIT_PER_ADDRESS=1
RATE_LIMIT_WINDOW_HOURS=24

# Access Control (Devnet)
# Optional allowlists (comma-separated). If set, only these IPs/addresses can request.
FAUCET_ALLOWED_IPS=
FAUCET_ALLOWED_ADDRESSES=

# Optional balance cap for recipients (0 disables). Denom matches DENOM.
MAX_RECIPIENT_BALANCE=0

# Balance monitoring / auto-refill
# Set thresholds in base denom units (e.g., upaw). 0 disables alerts/refill.
LOW_BALANCE_THRESHOLD=0
AUTO_REFILL_AMOUNT=0
ENABLE_AUTO_REFILL=false

# Captcha Configuration
TURNSTILE_SECRET=your-turnstile-secret-here
# Require captcha even outside production (default: true in production)
TURNSTILE_REQUIRED=false

# Transaction Settings
GAS_LIMIT=200000
GAS_PRICE=0.025upaw
TRANSACTION_MEMO=PAW Testnet Faucet

# Logging
LOG_LEVEL=info
