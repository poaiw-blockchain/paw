{
  "dashboard": {
    "title": "PAW Node Metrics",
    "description": "Comprehensive monitoring dashboard for PAW blockchain nodes",
    "tags": ["paw", "blockchain", "node", "cosmos-sdk"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "Block Height",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "tendermint_consensus_height",
            "legendFormat": "{{instance}} - Block Height",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "never"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "type": "graph",
        "title": "Block Time (seconds)",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(tendermint_consensus_height[1m]) * 60",
            "legendFormat": "{{instance}} - Blocks/min",
            "refId": "A"
          },
          {
            "expr": "60 / rate(tendermint_consensus_height[1m])",
            "legendFormat": "{{instance}} - Avg Block Time (s)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Validator Voting Power",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "tendermint_consensus_validator_power",
            "legendFormat": "Voting Power",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 0,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Missing Validators",
        "gridPos": {
          "x": 6,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "tendermint_consensus_missing_validators",
            "legendFormat": "Missing",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 3,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Byzantine Validators",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "tendermint_consensus_byzantine_validators",
            "legendFormat": "Byzantine",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Total Validators",
        "gridPos": {
          "x": 18,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "tendermint_consensus_validators",
            "legendFormat": "Total Validators",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "type": "graph",
        "title": "Transaction Throughput",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(tendermint_consensus_total_txs[1m])",
            "legendFormat": "{{instance}} - TPS",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "tps"
          }
        }
      },
      {
        "id": 8,
        "type": "graph",
        "title": "Mempool Size",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "tendermint_mempool_size",
            "legendFormat": "{{instance}} - Mempool Size",
            "refId": "A"
          },
          {
            "expr": "tendermint_mempool_size_bytes",
            "legendFormat": "{{instance}} - Mempool Bytes",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "type": "graph",
        "title": "P2P Peers",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "tendermint_p2p_peers",
            "legendFormat": "{{instance}} - Peers",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "type": "graph",
        "title": "Node Uptime",
        "gridPos": {
          "x": 12,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "legendFormat": "{{instance}} - Uptime",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 11,
        "type": "graph",
        "title": "RPC Request Rate",
        "gridPos": {
          "x": 0,
          "y": 28,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(tendermint_rpc_requests_total[1m])",
            "legendFormat": "{{instance}} - {{method}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 12,
        "type": "graph",
        "title": "Memory Usage",
        "gridPos": {
          "x": 12,
          "y": 28,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "{{instance}} - RSS",
            "refId": "A"
          },
          {
            "expr": "go_memstats_alloc_bytes",
            "legendFormat": "{{instance}} - Go Alloc",
            "refId": "B"
          },
          {
            "expr": "go_memstats_heap_inuse_bytes",
            "legendFormat": "{{instance}} - Heap In Use",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 13,
        "type": "graph",
        "title": "Goroutines",
        "gridPos": {
          "x": 0,
          "y": 36,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "go_goroutines",
            "legendFormat": "{{instance}} - Goroutines",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 14,
        "type": "graph",
        "title": "CPU Usage",
        "gridPos": {
          "x": 12,
          "y": 36,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m])",
            "legendFormat": "{{instance}} - CPU Usage",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        }
      }
    ]
  }
}
