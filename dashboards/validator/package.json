{
  "name": "paw-validator-dashboard",
  "version": "1.0.0",
  "description": "Comprehensive validator dashboard for PAW blockchain",
  "main": "app.js",
  "scripts": {
    "start": "http-server -p 8080",
    "dev": "http-server -p 8080 -c-1",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test tests/e2e",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:test": "docker-compose --profile test up test-runner"
  },
  "keywords": [
    "paw",
    "blockchain",
    "validator",
    "dashboard",
    "cosmos"
  ],
  "author": "PAW Network",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "http-server": "^14.1.1"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!tests/**",
      "!coverage/**",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4
  }
}
