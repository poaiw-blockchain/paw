# PAW Control Center - Environment Configuration
# Copy this file to .env and update with your values

# Authentication Service
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# Redis Configuration
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379

# PostgreSQL Configuration (for explorer)
POSTGRES_PASSWORD=your-postgres-password

# Node Environment
NODE_ENV=production
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:11200

# Network Endpoints (override if needed)
# PAW_RPC_URL=http://localhost:11001
# PAW_REST_URL=http://localhost:11002
# PAW_ANALYTICS_URL=http://localhost:11080/api/v1/analytics
