{
  "name": "paw-testing-dashboard",
  "version": "1.0.0",
  "description": "Comprehensive testing control panel for PAW blockchain",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "npx http-server -p 8080",
    "dev": "npx http-server -p 8080 -c-1",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:with-node": "docker-compose --profile with-node --profile with-faucet up -d",
    "lint": "eslint *.js services/*.js components/*.js",
    "format": "prettier --write \"**/*.{js,html,css,md}\""
  },
  "keywords": [
    "blockchain",
    "testing",
    "dashboard",
    "paw",
    "cosmos",
    "monitoring"
  ],
  "author": "PAW Development Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "services/*.js",
      "components/*.js",
      "!node_modules/**",
      "!tests/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none"
  }
}
