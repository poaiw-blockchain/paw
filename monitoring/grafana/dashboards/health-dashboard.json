{
  "dashboard": {
    "title": "PAW Health Checks",
    "tags": ["paw", "health", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Overall Service Health",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "paw_service_healthy",
            "legendFormat": "{{ service }}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Unhealthy",
                    "color": "red"
                  },
                  "0.5": {
                    "text": "Degraded",
                    "color": "yellow"
                  },
                  "1": {
                    "text": "Healthy",
                    "color": "green"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 0.5,
                  "color": "yellow"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Health Check Request Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(paw_health_check_total[5m])",
            "legendFormat": "{{ endpoint }} - {{ status }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Requests/sec",
            "format": "short"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Health Check Duration (p50, p95, p99)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(paw_health_check_duration_seconds_bucket[5m]))",
            "legendFormat": "{{ endpoint }} - p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(paw_health_check_duration_seconds_bucket[5m]))",
            "legendFormat": "{{ endpoint }} - p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(paw_health_check_duration_seconds_bucket[5m]))",
            "legendFormat": "{{ endpoint }} - p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Duration",
            "format": "s"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Health Check Success Rate",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(paw_health_check_total{status=\"200\"}[5m]) / rate(paw_health_check_total[5m]) * 100",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 90,
                  "color": "yellow"
                },
                {
                  "value": 99,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "System Metrics - Memory Usage",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "paw_health_system_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Memory",
            "format": "decmbytes"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "System Metrics - Goroutines",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 16
        },
        "targets": [
          {
            "expr": "paw_health_system_goroutines",
            "legendFormat": "Goroutines",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Count",
            "format": "short"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "System Metrics - Peer Count",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 16
        },
        "targets": [
          {
            "expr": "paw_health_system_peers",
            "legendFormat": "Peers",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 3,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Module Health Status",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "paw_module_healthy",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "color-background"
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "Unhealthy",
                    "color": "red"
                  },
                  "1": {
                    "text": "Healthy",
                    "color": "green"
                  }
                }
              }
            ]
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "module"
              },
              "properties": [
                {
                  "id": "custom.width",
                  "value": 200
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "instance": true,
                "job": true
              },
              "indexByName": {},
              "renameByName": {
                "Value": "Status"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "Active Alerts",
        "type": "alertlist",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "options": {
          "showOptions": "current",
          "maxItems": 20,
          "sortOrder": 1,
          "dashboardAlerts": false,
          "alertName": "",
          "dashboardTitle": "",
          "tags": ["paw", "health"],
          "stateFilter": {
            "firing": true,
            "pending": true,
            "noData": false,
            "normal": false
          },
          "folderId": null
        }
      },
      {
        "id": 10,
        "title": "Block Height",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        },
        "targets": [
          {
            "expr": "paw_health_system_block_height",
            "legendFormat": "Block Height",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                }
              ]
            }
          }
        }
      }
    ]
  }
}
