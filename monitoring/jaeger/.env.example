# Jaeger Environment Configuration
# Copy this file to .env and adjust values as needed

# Storage backend
# Options: memory, badger, elasticsearch
SPAN_STORAGE_TYPE=memory

# Memory storage settings (only used when SPAN_STORAGE_TYPE=memory)
MEMORY_MAX_TRACES=10000

# BadgerDB storage settings (only used when SPAN_STORAGE_TYPE=badger)
# BADGER_DIRECTORY_VALUE=/badger/data
# BADGER_DIRECTORY_KEY=/badger/key
# BADGER_EPHEMERAL=false
# BADGER_SPAN_STORE_TTL=168h

# Elasticsearch storage settings (only used when SPAN_STORAGE_TYPE=elasticsearch)
# ES_SERVER_URLS=http://elasticsearch:9200
# ES_INDEX_PREFIX=jaeger

# Sampling
SAMPLING_STRATEGIES_FILE=/etc/jaeger/sampling_strategies.json

# Metrics backend
METRICS_BACKEND=prometheus
METRICS_HTTP_ROUTE=/metrics

# Collector configuration
COLLECTOR_OTLP_ENABLED=true
COLLECTOR_ZIPKIN_HOST_PORT=:9411

# Query configuration
QUERY_BASE_PATH=/

# Log level
# Options: debug, info, warn, error
SPAN_STORAGE_LOG_LEVEL=info
