{
  "name": "paw-mobile-wallet",
  "version": "1.0.0",
  "description": "PAW Blockchain Mobile Wallet - Secure React Native wallet for iOS and Android",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "bundle:ios": "node -e \"require('fs').mkdirSync('dist/ios',{recursive:true});\" && react-native bundle --platform ios --dev false --entry-file index.js --bundle-output dist/ios/main.jsbundle --assets-dest dist/ios",
    "bundle:android": "node -e \"require('fs').mkdirSync('dist/android',{recursive:true});\" && react-native bundle --platform android --dev false --entry-file index.js --bundle-output dist/android/index.android.bundle --assets-dest dist/android",
    "build": "npm run bundle:ios && npm run bundle:android",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "keywords": [
    "blockchain",
    "wallet",
    "paw",
    "cosmos",
    "react-native",
    "mobile"
  ],
  "author": "PAW Blockchain Team",
  "license": "MIT",
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-reanimated": "^3.6.0",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.0",
    "react-native-vector-icons": "^10.0.3",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-keychain": "^8.1.2",
    "react-native-biometrics": "^3.0.1",
    "react-native-camera": "^4.2.1",
    "react-native-qrcode-svg": "^6.2.0",
    "react-native-svg": "^14.1.0",
    "@react-native-community/clipboard": "^1.5.1",
    "@react-native-community/netinfo": "^11.1.0",
    "react-native-push-notification": "^8.1.1",
    "react-native-permissions": "^3.10.1",
    "react-native-device-info": "^10.11.0",
    "axios": "^1.6.2",
    "bech32": "^2.0.0",
    "bip39": "^3.1.0",
    "crypto-js": "^4.2.0",
    "events": "^3.3.0",
    "elliptic": "^6.5.4",
    "js-sha256": "^0.10.1",
    "ripemd160": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/runtime": "^7.23.5",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@testing-library/react-native": "^12.4.1",
    "@types/react": "^18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.1.0",
    "react-test-renderer": "18.2.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-vector-icons|react-native-biometrics|react-native-keychain)/)"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!**/node_modules/**"
    ]
  }
}
