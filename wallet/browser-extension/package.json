{
  "name": "xai-browser-wallet-extension",
  "version": "0.1.0",
  "description": "PAW Browser Wallet & Miner - Lightweight wallet and networking controls",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "watch": "node build.js --watch",
    "lint": "eslint src --ext js --fix",
    "format": "prettier --write \"**/*.{js,json,html,css}\"",
    "test": "vitest",
    "security:audit": "node tools/security-audit.js && npm audit --audit-level=moderate",
    "clean": "rimraf dist",
    "package": "npm run build && npx bestzip extension.zip dist/*"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.32.4",
    "@cosmjs/encoding": "^0.32.4",
    "@cosmjs/proto-signing": "^0.32.4",
    "@ledgerhq/hw-app-cosmos": "^6.28.5",
    "@ledgerhq/hw-transport-webhid": "^6.28.5",
    "@ledgerhq/hw-transport-webusb": "^6.28.5",
    "bech32": "^2.0.0",
    "dompurify": "^3.0.8"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/chrome": "^0.0.258",
    "bestzip": "^2.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "html-minifier-terser": "^7.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "wallet",
    "mining",
    "browser-extension"
  ],
  "author": "PAW Team",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
