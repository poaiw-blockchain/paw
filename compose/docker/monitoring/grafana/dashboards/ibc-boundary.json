{
  "dashboard": {
    "title": "PAW IBC Boundary & Validation",
    "description": "Observability for packet validation failures across DEX/Oracle/Compute ports with per-reason/channel breakdowns.",
    "tags": ["paw", "ibc", "security", "boundary"],
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "timezone": "browser",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "port",
          "type": "query",
          "label": "Port",
          "datasource": "Prometheus",
          "query": "label_values(ibc_packet_validation_failed, port)",
          "refresh": 2,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "channel",
          "type": "query",
          "label": "Channel",
          "datasource": "Prometheus",
          "query": "label_values(ibc_packet_validation_failed, channel)",
          "refresh": 2,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        },
        {
          "name": "reason",
          "type": "query",
          "label": "Reason",
          "datasource": "Prometheus",
          "query": "label_values(ibc_packet_validation_failed, reason)",
          "refresh": 2,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "type": "timeseries",
        "title": "Packet Validation Failures by Reason (rate)",
        "datasource": "Prometheus",
        "id": 1,
        "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum by(reason) (rate(ibc_packet_validation_failed{port=~\"$port\",channel=~\"$channel\",reason=~\"$reason\"}[5m]))",
            "legendFormat": "{{reason}}",
            "interval": "",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          },
        "overrides": []
        }
      },
      {
        "type": "table",
        "title": "Top Channels by Failures (1h)",
        "datasource": "Prometheus",
        "id": 2,
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 9 },
        "options": {
          "showHeader": true
        },
        "targets": [
          {
            "expr": "topk(10, sum by(port,channel,reason) (increase(ibc_packet_validation_failed{port=~\"$port\",channel=~\"$channel\",reason=~\"$reason\"}[1h])))",
            "format": "table",
            "instant": true,
            "legendFormat": "{{port}}/{{channel}} ({{reason}})",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "labelsToFields",
            "options": {
              "mode": "columns"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          },
        "overrides": []
        }
      }
    ],
    "uid": "paw-ibc-boundary",
    "editable": true
  }
}
