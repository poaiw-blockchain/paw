# PAW Flask Explorer - Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_SECRET_KEY=change-me-to-a-random-secret-key-in-production
FLASK_ENV=production
FLASK_DEBUG=false

# Service Endpoints
# Update these based on your deployment
INDEXER_API_URL=http://paw-indexer:8080
RPC_URL=http://paw-node:26657
GRPC_URL=paw-node:9090

# Application Settings
REQUEST_TIMEOUT=30
MAX_ITEMS_PER_PAGE=100
DEFAULT_ITEMS_PER_PAGE=20

# Gunicorn Settings
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Logging
LOG_LEVEL=info

# Network Settings (for docker-compose)
# PAW_NETWORK_SUBNET=172.20.0.0/16

# Port Configuration
# EXPLORER_PORT=11080

# Cache Settings (if using Redis in the future)
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://paw-redis:6379/0
# CACHE_DEFAULT_TIMEOUT=300

# Security Settings
# ENABLE_CORS=true
# CORS_ORIGINS=*

# Rate Limiting
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_PER_MINUTE=100
