# Database Configuration
DATABASE_URL=postgres://explorer:explorer@localhost:5432/paw_explorer?sslmode=disable
DATABASE_MAX_CONNECTIONS=50
DATABASE_MAX_IDLE=10

# Blockchain Node
NODE_RPC_URL=http://localhost:26657
NODE_GRPC_URL=localhost:9090
NODE_WS_URL=ws://localhost:26657/websocket

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=paw-explorer
NATS_CLIENT_ID=indexer-1

# Indexer Configuration
INDEXER_START_HEIGHT=1
INDEXER_BATCH_SIZE=100
INDEXER_WORKERS=10
INDEXER_RETRY_ATTEMPTS=3
INDEXER_RETRY_DELAY=5s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_PORT=9090
METRICS_ENABLED=true

# Performance
ENABLE_CACHE=true
CACHE_SIZE=10000
CACHE_TTL=5m
